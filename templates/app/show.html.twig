{% block title %}Book{% endblock %}

{% block body %}
    <h1 class="titlePage">Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Editing</th>
                <td>{{ book.editing }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ book.pages }}</td>
            </tr>
            <tr>
                <th>Code_isbn</th>
                <td>{{ book.codeIsbn }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
