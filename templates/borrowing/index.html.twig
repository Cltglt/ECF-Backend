{% extends 'base.html.twig' %}

{% block title %}Borrowing index{% endblock %}

{% block body %}
    <h1 class="titlePage">Borrowing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_borrowing</th>
                <th>Date_return</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrowing in borrowings %}
            <tr>
                <td>{{ borrowing.id }}</td>
                <td>{{ borrowing.dateBorrowing ? borrowing.dateBorrowing|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.dateReturn ? borrowing.dateReturn|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('borrowing_show', {'id': borrowing.id}) }}">show</a>
                    <a href="{{ path('borrowing_edit', {'id': borrowing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('borrowing_new') }}">Create new</a>
{% endblock %}
