<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="{{ path('app') }}">ECF-Backend</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link navLink" href="{{ path('app') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navLink" href="{{ path('book_index') }}">Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navLink" href="{{ path('borrowing_index') }}">Borrowings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navLink" href="{{ path('user_index') }}">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navLink" href="{{ path('author_index') }}">Authors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navLink" href="{{ path('kind_index') }}">Kinds</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navLink" href="{{ path('borrower_index') }}">Borrowers</a>
                </li>
            </ul>
            <div class="my-2 my-lg-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        {# Route a changer  #}
                        <a class="nav-link navLink" href="{{ path('app_login') }}">Login</a>
                    </li>
                </ul>
            </div>
            {# <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form> #}
        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
</body>

</html>
